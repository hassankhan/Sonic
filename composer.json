{
    "name": "hassankhan/zepto",
    "description": "Zepto is a stupidly simple, blazing fast, flat-file CMS based on Pico",
    "keywords": ["cms", "framework", "markdown"],
    "homepage": "https://github.com/hassankhan/Zepto",
    "require": {
        "php": ">=5.3",
        "twig/twig": "1.*",
        "michelf/php-markdown": "~1.4",
        "pimple/pimple": "~2.0",
        "symfony/http-foundation": "~2.4",
        "league/flysystem": "~0.2"
    },
    "require-dev": {
        "filp/whoops": "1.*",
        "phpunit/phpunit": "4.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "license": "MIT",
    "autoload": {
        "psr-0": {
            "Zepto": "src/"
        }
    },
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Hassan Khan",
            "email": "contact@hassankhan.me",
            "homepage": "http://hassankhan.me",
            "role": "Developer"
        }
    ]
}
